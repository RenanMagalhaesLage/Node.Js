<%- include('./partials/header.ejs')%>
<body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
        <h1 class="row d-flex justify-content-center mt-3"><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <textarea placeholder="Digite sua resposta" name="corpo" class="form-control"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-success">Enviar</button>
        </form>
        <hr>
        <h3>
            Respostas
        </h3>
        
                <% respostas.forEach(resposta => {%>
                    <div class="card">
                        <div class="card-body">
                            <p><%= resposta.corpo%></p>
                        </div>
                    </div>
                    <br>
                    
                <%})%>
        </div>
    </div>
</body>
<%- include('./partials/footer.ejs')%>
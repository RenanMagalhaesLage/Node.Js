<%- include('../partials/header.ejs') %>
</head>
<style>
    body{
        background: linear-gradient(to right, #eb7d55, #ffd148 );
    }
    .container{
        margin-top: 100px;
    }
    .table tbody {
      background-color: #f5f5f5; /* Cinza claro */
    }
    .table thead {
      background-color: #ededed; /* Cinza claro */
    }
        /* Estilo para bordas arredondadas */
    .table {
      border-radius: 10px 10px 0 0;
      overflow: hidden;
      text-align: center;
    }
    .container::after {
        content: ''; /* Adiciona o conteúdo necessário para a pseudo-classe */
        position: absolute; /* Posiciona o elemento absolutamente */
        top: 0;
        left: 0;
        width: 100%; /* Cobrindo toda a largura do corpo */
        height: 100%; /* Cobrindo toda a altura do corpo */
        box-shadow: inset 0 0 500px 500px rgba(255, 255, 255, 0.217); /* Box-shadow branco com opacidade de 0.5 */
        pointer-events: none; /* Garante que a sombra não seja clicável */
        z-index: -1; /* Define a sombra para estar atrás do conteúdo */

    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

</style>
<body>
    <%- include('../partials/navbarProfessor.ejs') %>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-header">
                        <h1>Cadastrar Matéria</h1>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nome</h6>
                            </div>
                            <div class="col-sm-8 text-secondary">
                                <input type="text" class="form-control" placeholder="Nome">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dia da Semana</h6>
                            </div>
                            <div class="col-sm-8 text-secondary">
                                <input type="text" class="form-control" placeholder="Segunda-Feira">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Horário</h6>
                            </div>
                            <div class="col-sm-8 text-secondary">
                                <input type="text" class="form-control" placeholder="00:00 - 00:00">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Local</h6>
                            </div>
                            <div class="col-sm-8 text-secondary">
                                <input type="text" class="form-control" placeholder="Laboratório / Sala">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Resumo</h6>
                            </div>
                            <div class="col-sm-8 text-secondary">
                                <input type="text" class="form-control" placeholder="Escreva um breve resumo sobre a matéria...">
                            </div>
                        </div>
                        <hr>
                        <div class="col-sm-12 text-secondary">
                            <p>* Confira os dados antes de enviar essa solicitação de cadastro de matéria</p>
                            <input type="button" class="btn btn-success px-5" value="Enviar">
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div> 

</body>
<%- include('../partials/footer.ejs') %>
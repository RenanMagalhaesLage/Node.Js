<%- include('../partials/header.ejs') %>
</head>
<style>
    body{
        background: linear-gradient(to right, #eb7d55, #ffd148 );
    }
    .container{
        margin-top: 100px;
    }
    .container::after {
        content: ''; /* Adiciona o conteúdo necessário para a pseudo-classe */
        position: absolute; /* Posiciona o elemento absolutamente */
        top: 0;
        left: 0;
        width: 100%; /* Cobrindo toda a largura do corpo */
        height: 100%; /* Cobrindo toda a altura do corpo */
        box-shadow: inset 0 0 500px 500px rgba(255, 255, 255, 0.217); /* Box-shadow branco com opacidade de 0.5 */
        pointer-events: none; /* Garante que a sombra não seja clicável */
        z-index: -1; /* Define a sombra para estar atrás do conteúdo */

    }
    .main-body {
        padding: 15px;
    }
    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

    .gutters-sm>.col, .gutters-sm>[class*=col-] {
        padding-right: 8px;
        padding-left: 8px;
    }
    .mb-3, .my-3 {
        margin-bottom: 1rem!important;
    }
    h5{
        margin-top: 28px;
        margin-bottom: 24px;
    }
    .btn-container {
      text-align: right;
    }
</style>
<body>
    <%- include('../partials/navbarAluno.ejs') %>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
